<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_workout_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="leggettm.workoutlog.WorkoutDetailsActivity"
    tools:showIn="@layout/activity_workout_details">

    <RelativeLayout
        android:id="@+id/layoutRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/lblWorkoutDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="@string/workout_details"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:fontFamily="casual" />

    <TextView
        android:id="@+id/lblDWork"
        android:text="@string/workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/lblWorkoutDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/lblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblDWork"
        android:layout_toRightOf="@+id/lblDWork"
        android:layout_toEndOf="@+id/lblDWork"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        tools:text="Bench Press"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/lblDSets"
        android:text="@string/sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDWork"
        android:layout_alignRight="@+id/lblDWork"
        android:layout_alignEnd="@+id/lblDWork"
        android:layout_marginTop="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/lblSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblDSets"
        android:layout_alignRight="@+id/lblName"
        android:layout_alignEnd="@+id/lblName"
        tools:text="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/lblDReps"
        android:text="@string/reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDSets"
        android:layout_alignRight="@+id/lblDSets"
        android:layout_alignEnd="@+id/lblDSets"
        android:layout_marginTop="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/lblReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblDReps"
        android:layout_alignBottom="@+id/lblDReps"
        android:layout_alignRight="@+id/lblSets"
        android:layout_alignEnd="@+id/lblSets"
        tools:text="10"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/lblDWeight"
        android:text="@string/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDReps"
        android:layout_alignRight="@+id/lblDReps"
        android:layout_alignEnd="@+id/lblDReps"
        android:layout_marginTop="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/lblWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblDWeight"
        android:layout_alignRight="@+id/lblReps"
        android:layout_alignEnd="@+id/lblReps"
        tools:text="200"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/btnEdit"
        android:text="@string/edit_workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnEditOnClick"
        android:layout_below="@+id/lblWeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnDel"
        android:text="@string/delete_workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnDelOnClick"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnEdit" />

    </RelativeLayout>
</ScrollView>
